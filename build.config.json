{
	"files": [
		"electron/main.cjs",
		"electron/preload.js",
		"electron/logoPng/icon.png",
		"electron/icon.ico",
		"RELEASE.md",
		{
			"from": "build",
			"to": ""
		}
	],
	"productName": "TimeTracker",
	"appId": "timetracker",
	"icon": "build/icon.png",
	"directories": {
		"output": "dist"
	},
	"artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
	"dmg": {
		"title": "${productName} ${version}",
		"icon": "build/icon.png"
	},
	"linux": {
		"target": "tar.gz",
		"icon": "build/icon.png"
	},
	"win": {
		"target": ["NSIS", "portable"],
		"icon": "build/icon.png",
		"artifactName": "${productName}-${version}-${os}-installer-${arch}.${ext}"
	},
	"portable": {
		"artifactName": "${productName}-${version}-${os}-portable-${arch}.${ext}"
	},
	"publish": [
		{
			"provider": "github",
			"private": true
		}
	]
}
